<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hourglass.lingaraj.expandablefab.MainActivity">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="bottom|end"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/expandable_fab"
        android:layout_marginRight="3dp"
        android:src="@drawable/ic_share"
        android:id="@+id/share_fab_expandable"
        android:clickable="true"
        android:contentDescription="@null"
        android:layout_marginBottom="5dp"
        />



    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/expandable_fab"
        android:layout_marginRight="3dp"
        android:src="@drawable/ic_link"
        android:id="@+id/link_fab_expandable"
        android:clickable="true"
        android:contentDescription="@null"
        android:layout_marginBottom="5dp"
        />


    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/expandable_fab"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_heart_filled"
            android:id="@+id/save_fab_expandable"
            android:clickable="true"
            android:contentDescription="@null"
            android:layout_marginBottom="5dp"
            />

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/fab_background"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_traingle"
            android:id="@+id/fab_button"
            android:clickable="true"
            android:contentDescription="@null"
            />

</LinearLayout>


    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>
